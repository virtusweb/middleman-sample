!!! 5
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    = stylesheet_link_tag "bootstrap"
    = javascript_include_tag  "bootstrap"
  %body
    .container-fluid
      .row-fluid
        .span12
          %h2 dobleclip
          %h4 Tu negocio bajo control
      .row-fluid
        .span8
          - if is_blog_article?
            %h4= current_article.title
            %small= current_article.date.strftime('%Y-%m-%d')
            %br
          = yield
        .span4
          %ul
            %li= link_to 'Principal', '/'
            %li= link_to 'Blog', '/blog'
            %li= link_to 'Manual', '/manual'
            %li= link_to 'Contacto', 'contacto'
          %h4 ArtÃ­culos recientes
          %ul
            - blog.articles[0...10].each do |article|
              %li
                %a{:href => article.url}= article.title
                %small= article.date.strftime('%Y-%m-%d')
          %h4 Temas
          %ul
            - blog.tags.each do |tag, articles|
              %li
                %a{:href => tag_path(tag)}
                  = tag
                  (#{articles.size})
      .row-fluid
        .span8
          %p.text-center
            %small dobleclip &copy; 2013
